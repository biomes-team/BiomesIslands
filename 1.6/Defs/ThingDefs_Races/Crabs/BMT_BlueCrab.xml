<Defs>

	<ThingDef ParentName="BiomesCore_CrabThingBase">
		<defName>BMT_BlueCrab</defName>
		<label>blue crab</label>
		<description>A medium sized crab species related to the rimcrab. It is native to cold and temperate islands.</description>
		<statBases>
			<!-- <HungerRateMultiplier>3</HungerRateMultiplier> -->
			<MarketValue>110</MarketValue>
			<ArmorRating_Blunt>0.45</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.45</ArmorRating_Sharp>
			<ComfyTemperatureMin>-50</ComfyTemperatureMin>
			<ComfyTemperatureMax>50</ComfyTemperatureMax>
			<FilthRate>4</FilthRate>
			<Wildness>0.20</Wildness>
		</statBases>
		<race>
			<herdAnimal>true</herdAnimal>
			<herdMigrationAllowed>false</herdMigrationAllowed>
			<baseBodySize>0.25</baseBodySize>
			<baseHealthScale>0.6</baseHealthScale>
			<baseHungerRate>0.30</baseHungerRate>
			<lifeExpectancy>9</lifeExpectancy>
			<manhunterOnTameFailChance>0.15</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.05</manhunterOnDamageChance>
			<roamMtbDays>3</roamMtbDays>
			<useMeatFrom>BMT_RimCrab</useMeatFrom>
		</race>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_EggBlueCrabFertilized</eggFertilizedDef>
				<eggUnfertilizedDef>BMT_EggBlueCrabUnfertilized</eggUnfertilizedDef>
				<eggFertilizationCountMax>2</eggFertilizationCountMax>
				<eggLayIntervalDays>9</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>
					<min>1</min>
					<max>3</max>
				</eggCountRange>
			</li>
		</comps>
		<tools>
			<li>
				<label>claw</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2.2</cooldownTime>
				<linkedBodyPartsGroup>HeadClaw</linkedBodyPartsGroup>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>4</power>
				<cooldownTime>1.65</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
			</li>
		</tools>
	</ThingDef>

