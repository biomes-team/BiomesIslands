<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<!-- Manta Ray -->
	<LifeStageDef ParentName="AnimalBaby">
		<defName>BMT_MantaRayBabyTiny</defName>
		<bodySizeFactor>0.1</bodySizeFactor>
		<foodMaxFactor>4</foodMaxFactor>
		<statFactors>
			<MoveSpeed>0.5</MoveSpeed>
		</statFactors>
	</LifeStageDef>

	<LifeStageDef>
		<defName>BMT_MantaRayJuvenile</defName>
		<label>juvenile</label>
		<voxPitch>1.2</voxPitch>
		<bodySizeFactor>0.5</bodySizeFactor>
		<foodMaxFactor>1.5</foodMaxFactor>
		<healthScaleFactor>0.6</healthScaleFactor>
		<hungerRateFactor>0.75</hungerRateFactor>
		<marketValueFactor>0.75</marketValueFactor>
		<meleeDamageFactor>0.75</meleeDamageFactor>
		<statFactors>
			<MoveSpeed>0.9</MoveSpeed>
		</statFactors>
	</LifeStageDef>

	<LifeStageDef>
		<defName>BMT_MantaRayAdult</defName>
		<label>adult</label>
		<visible>false</visible>
		<reproductive>true</reproductive>
		<milkable>true</milkable>
		<shearable>true</shearable>
	</LifeStageDef>

	<ThingDef ParentName="BiomesCore_SaltWaterAnimal" ADogSaidBody="Tail">
		<defName>BMT_MantaRay</defName>
		<label>manta ray</label>
		<description>Manta ray, closely related to sharks, can be found in warm, subtropical and tropical waters. Migrates across open oceans, singly or in groups.</description>
		<statBases>
			<MoveSpeed>8</MoveSpeed>
			<ComfyTemperatureMin>-15</ComfyTemperatureMin>
			<ComfyTemperatureMax>55</ComfyTemperatureMax>
			<MarketValue>1500</MarketValue>
			<Wildness>0.70</Wildness>
		</statBases>
		<tools>
			<li>
				<label>teeth</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>22</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.8</chanceFactor>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>28</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>18</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.1</chanceFactor>
			</li>
		</tools>
		<race>
			<herdAnimal>true</herdAnimal>
			<predator>false</predator>
			<!-- <maxPreyBodySize>0.8</maxPreyBodySize> -->
			<body>Biomes_MantaBody</body>
			<leatherDef>BMT_Sharkskin</leatherDef>
			<baseHungerRate>0.8</baseHungerRate>
			<baseBodySize>2</baseBodySize>
			<baseHealthScale>3.0</baseHealthScale>
			<foodType>OmnivoreRoughAnimal</foodType>
			<gestationPeriodDays>20</gestationPeriodDays>
			<nuzzleMtbHours>275</nuzzleMtbHours>
			<petness>0.01</petness>
			<lifeExpectancy>32</lifeExpectancy>
			<trainability>Intermediate</trainability>
			<manhunterOnTameFailChance>0.4</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.6</manhunterOnDamageChance>
			<useMeatFrom>BMT_WhiteShark</useMeatFrom>

			<lifeStageAges>
				<li>
					<def>BMT_MantaRayBabyTiny</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>BMT_MantaRayJuvenile</def>
					<minAge>0.4</minAge>
				</li>
				<li>
					<def>BMT_MantaRayAdult</def>
					<minAge>0.8</minAge>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
		</race>
	</ThingDef>

