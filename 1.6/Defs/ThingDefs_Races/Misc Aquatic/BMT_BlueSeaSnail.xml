	<ThingDef ParentName="BiomesCore_WaterAnimal" ADogSaidBody="Tail">
		<defName>BMT_BlueSeaSnail</defName>
		<label>sea snail</label>
		<description>A diminutive aquatic mollusk. Food for fish and otters.</description>
		<statBases>
			<MoveSpeed>8</MoveSpeed>
			<ComfyTemperatureMin>-10</ComfyTemperatureMin>
			<ComfyTemperatureMax>45</ComfyTemperatureMax>
			<MarketValue>100</MarketValue>
			<LeatherAmount>0</LeatherAmount>
			<Wildness>0.5</Wildness>
		</statBases>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_EggBlueSeaSnailFertilized</eggFertilizedDef>
				<eggUnfertilizedDef>BMT_EggBlueSeaSnailUnfertilized</eggUnfertilizedDef>
				<eggLayIntervalDays>15</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>1~4</eggCountRange>
			</li>
		</comps>
		<tools>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>4</power>
				<cooldownTime>2.5</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
			</li>
		</tools>
		<race>
			<herdAnimal>false</herdAnimal>
			<herdMigrationAllowed>false</herdMigrationAllowed>
			<body>BiomesCore_Snail</body>
			<leatherDef>BMT_Leather_Gastropoda</leatherDef>
			<baseHungerRate>0.3</baseHungerRate>
			<baseBodySize>0.15</baseBodySize>
			<baseHealthScale>0.4</baseHealthScale>
			<foodType>VegetarianRoughAnimal</foodType>
			<packAnimal>false</packAnimal>
			<nuzzleMtbHours>275</nuzzleMtbHours>
			<petness>0.01</petness>
			<lifeExpectancy>35</lifeExpectancy>
			<trainability>None</trainability>
			<manhunterOnTameFailChance>0.6</manhunterOnTameFailChance>
			<manhunterOnDamageChance>1</manhunterOnDamageChance>
			<meatLabel>snail meat</meatLabel>
			<meatColor>(62,133,215)</meatColor>
			<lifeStageAges>
				<li>
					<def>BMT_BlueSeaSnailTiny</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>BMT_BlueSeaSnailJuvenile</def>
					<minAge>0.4</minAge>
				</li>
				<li>
					<def>BMT_BlueSeaSnailAdult</def>
					<minAge>0.8</minAge>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
		</race>
	</ThingDef>

