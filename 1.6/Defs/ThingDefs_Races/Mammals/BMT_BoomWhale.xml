<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- BoomWhale -->
	
	<ThingDef ParentName="BiomesCore_SaltWaterAnimal" ADogSaidBody="Tail">
		<defName>BMT_BoomWhale</defName>
		<label>boomwhale</label>
		<description>A whale that explodes. Related to both whales and boomalopes, it is somewhat smaller and dumber than its unmodified cousins.</description>
		<statBases>
			<MoveSpeed>7.5</MoveSpeed>
			<ComfyTemperatureMin>-45</ComfyTemperatureMin>
			<ComfyTemperatureMax>65</ComfyTemperatureMax>
			<MarketValue>1800</MarketValue>
			<Wildness>0.85</Wildness>
		</statBases>
		<comps>
			<li Class="CompProperties_Milkable">
				<milkDef>Chemfuel</milkDef>
				<milkIntervalDays>4</milkIntervalDays>
				<milkAmount>55</milkAmount>
				<milkFemaleOnly>false</milkFemaleOnly>
			</li>
		</comps>
		<tools>
			<li>
				<label>teeth</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>22</power>
				<cooldownTime>2.2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.6</chanceFactor>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>20</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>22</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.3</chanceFactor>
			</li>
		</tools>
		<race>
			<herdAnimal>true</herdAnimal>
			<predator>false</predator>
			<body>BMT_WhaleBody</body>
			<leatherDef>Leather_Plain</leatherDef>
			<baseHungerRate>2.7</baseHungerRate>
			<baseBodySize>3.2</baseBodySize>
			<baseHealthScale>4.0</baseHealthScale>
			<foodType>OmnivoreRoughAnimal</foodType>
			<gestationPeriodDays>36</gestationPeriodDays>
			<packAnimal>false</packAnimal>
			<nuzzleMtbHours>275</nuzzleMtbHours>
			<petness>0.01</petness>
			<lifeExpectancy>45</lifeExpectancy>
			<trainability>Intermediate</trainability>
			<manhunterOnTameFailChance>0.5</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.6</manhunterOnDamageChance>
			<useMeatFrom>BMT_Whale</useMeatFrom>
			<deathAction>
				<workerClass>DeathActionWorker_BigExplosion</workerClass>
			</deathAction>
			<executionRange>6</executionRange>
			<lifeStageAges>
				<li>
					<def>AnimalBabyTiny</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>1.2</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>3.0</minAge>

					<soundCall>BMT_Whale_Call</soundCall>
					<soundAngry>BMT_Whale_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
		</race>
		<modExtensions>
			<li Class="BiomesCore.WaterWalkerExtension"/>
		</modExtensions>
	</ThingDef>

