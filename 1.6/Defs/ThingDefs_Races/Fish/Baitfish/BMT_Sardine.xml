	<ThingDef ParentName="EggFertBase">
		<defName>BMT_EggSardineFertilized</defName>
		<label>sardine egg (fert.)</label>
		<description>A fertilized sardine egg. If all goes well, it should hatch into a fish. It can be eaten raw, but it's much better cooked.</description>
		<graphicData>
			<color>(90,80,70)</color>
			<drawSize>0.9</drawSize>
		</graphicData>
		<statBases>
			<MarketValue>10.0</MarketValue>
			<DeteriorationRate>0</DeteriorationRate>
		</statBases>
		<comps>
			<li Class="CompProperties_Hatcher">
				<hatcherDaystoHatch>6.5</hatcherDaystoHatch>
				<hatcherPawn>BMT_Sardine</hatcherPawn>
			</li>
		</comps>
	</ThingDef>
	
	
	<ThingDef ParentName="EggUnfertBase">
		<defName>BMT_EggSardineUnfertilized</defName>
