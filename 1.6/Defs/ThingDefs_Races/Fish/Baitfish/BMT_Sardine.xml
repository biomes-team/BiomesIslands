		<graphicData>
			<color>(80,70,60)</color>
			<drawSize>0.9</drawSize>
		</graphicData>
		<statBases>
			<MarketValue>5.0</MarketValue>
		</statBases>
	</ThingDef>
	
	
</Defs>
