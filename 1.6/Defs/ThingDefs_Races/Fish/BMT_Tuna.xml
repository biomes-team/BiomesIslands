<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Tuna -->

	<ThingDef ParentName="BiomesCore_SaltWaterAnimal" ADogSaidBody="Tail">
		<defName>BMT_Tuna</defName>
		<label>tuna</label>
		<description>A large carnivorous fish. Will eat anything they can swallow whole. Fortunately, they are not large enough to swallow people.</description>
		<statBases>
			<MoveSpeed>6</MoveSpeed>
			<ComfyTemperatureMin>10</ComfyTemperatureMin>
			<ComfyTemperatureMax>55</ComfyTemperatureMax>
			<MarketValue>300</MarketValue>
			<Wildness>0.75</Wildness>
		</statBases>
		<tools>
			<li>
				<label>teeth</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>12</power>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>18</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.8</chanceFactor>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>12</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.1</chanceFactor>
			</li>
		</tools>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_EggTunaFertilized</eggFertilizedDef>
				<eggUnfertilizedDef>BMT_EggTunaUnfertilized</eggUnfertilizedDef>
				<eggFertilizationCountMax>1</eggFertilizationCountMax>
				<eggLayIntervalDays>15</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>2~5</eggCountRange>
			</li>
		</comps>
		<race>
			<herdAnimal>false</herdAnimal>
			<predator>true</predator>
			<body>BMT_FishBody</body>
			<leatherDef>BMT_Fishskin</leatherDef>
			<baseHungerRate>0.85</baseHungerRate>
			<baseBodySize>2</baseBodySize>
			<baseHealthScale>1.5</baseHealthScale>
			<foodType>CarnivoreAnimal</foodType>
			<packAnimal>false</packAnimal>
			<nuzzleMtbHours>60</nuzzleMtbHours>
			<petness>0.1</petness>
			<lifeExpectancy>20</lifeExpectancy>
			<trainability>Intermediate</trainability>
			<manhunterOnDamageChance>0</manhunterOnDamageChance>
			<manhunterOnTameFailChance>0</manhunterOnTameFailChance>
			<useMeatFrom>BMT_WhiteShark</useMeatFrom>
			<litterSizeCurve>
				<points>
					<li>(0.5, 0)</li>
					<li>(1, 1)</li>
					<li>(2, 1.7)</li>
					<li>(3, 0.7)</li>
					<li>(5, 0)</li>
				</points>
			</litterSizeCurve>
			<lifeStageAges>
				<li>
					<def>AnimalBabyTiny</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.2</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.45</minAge>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
			<waterSeeker>true</waterSeeker>
			<waterCellCost>1</waterCellCost>
		</race>
		<modExtensions>
			<li Class="BiomesCore.WaterWalkerExtension"/>
		</modExtensions>
	</ThingDef>

