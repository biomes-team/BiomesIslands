<?xml version="1.0" encoding="utf-8" ?>
<Defs>




	<!-- Red Snapper -->

	<ThingDef ParentName="BiomesCore_SaltWaterAnimal" ADogSaidBody="Tail">
		<defName>BMT_RedSnapper</defName>
		<label>red snapper</label>
		<description>A carnivorous fish. Will eat anything they can swallow whole. Fortunately, they are not large enough to swallow people.</description>
		<statBases>
			<MoveSpeed>6</MoveSpeed>
			<ComfyTemperatureMin>0</ComfyTemperatureMin>
			<ComfyTemperatureMax>60</ComfyTemperatureMax>
			<MarketValue>300</MarketValue>
			<Wildness>0.65</Wildness>
		</statBases>
		<tools>
			<li>
				<label>teeth</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>8</power>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>12</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.8</chanceFactor>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>8</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.1</chanceFactor>
			</li>
		</tools>
		
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_EggRedSnapperFertilized</eggFertilizedDef>
				<eggUnfertilizedDef>BMT_EggRedSnapperUnfertilized</eggUnfertilizedDef>
				<eggFertilizationCountMax>1</eggFertilizationCountMax>
				<eggLayIntervalDays>12</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>2~5</eggCountRange>
			</li>
		</comps>
		<race>
			<herdAnimal>false</herdAnimal>
			<predator>true</predator>
			<body>BMT_FishBody</body>
			<leatherDef>BMT_Fishskin</leatherDef>
			<baseHungerRate>0.85</baseHungerRate>
			<baseBodySize>1.3</baseBodySize>
			<baseHealthScale>1.5</baseHealthScale>
			<foodType>CarnivoreAnimal</foodType>
			<packAnimal>false</packAnimal>
			<nuzzleMtbHours>60</nuzzleMtbHours>
			<petness>0.1</petness>
			<lifeExpectancy>15</lifeExpectancy>
			<trainability>Intermediate</trainability>
			<manhunterOnDamageChance>0.05</manhunterOnDamageChance>
			<manhunterOnTameFailChance>0.02</manhunterOnTameFailChance>
			<useMeatFrom>BMT_WhiteShark</useMeatFrom>
			<lifeStageAges>
				<li>
					<def>AnimalBabyTiny</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.2</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.45</minAge>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
		</race>
		<modExtensions>
			<li Class="BiomesCore.WaterWalkerExtension"/>
		</modExtensions>
	</ThingDef>

