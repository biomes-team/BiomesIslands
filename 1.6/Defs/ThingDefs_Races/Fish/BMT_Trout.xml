<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Trout -->

	<ThingDef ParentName="BiomesCore_SaltWaterAnimal" ADogSaidBody="Tail">
		<defName>BMT_Trout</defName>
		<label>trout</label>
		<description>A large herbivorous fish.</description>
		<statBases>
			<MoveSpeed>4</MoveSpeed>
			<ComfyTemperatureMin>-45</ComfyTemperatureMin>
			<ComfyTemperatureMax>45</ComfyTemperatureMax>
			<MarketValue>120</MarketValue>
			<Wildness>0.70</Wildness>
		</statBases>
		<tools>
			<li>
				<label>teeth</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>7</power>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>9</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
				<cooldownTime>2.2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.8</chanceFactor>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>7</power>
				<cooldownTime>2.2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.1</chanceFactor>
			</li>
		</tools>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_EggTroutFertilized</eggFertilizedDef>
				<eggUnfertilizedDef>BMT_EggTroutUnfertilized</eggUnfertilizedDef>
				<eggFertilizationCountMax>1</eggFertilizationCountMax>
				<eggLayIntervalDays>15</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>1~3</eggCountRange>
			</li>
		</comps>
		<race>
			<herdAnimal>true</herdAnimal>
			<body>BMT_FishBody</body>
			<leatherDef>BMT_Fishskin</leatherDef>
			<baseHungerRate>0.50</baseHungerRate>
			<baseBodySize>0.9</baseBodySize>
			<baseHealthScale>0.9</baseHealthScale>
			<foodType>VegetarianRoughAnimal</foodType>
			<packAnimal>false</packAnimal>
			<nuzzleMtbHours>60</nuzzleMtbHours>
			<petness>0.1</petness>
			<lifeExpectancy>15</lifeExpectancy>
			<trainability>None</trainability>
			<manhunterOnDamageChance>0.01</manhunterOnDamageChance>
			<manhunterOnTameFailChance>0.02</manhunterOnTameFailChance>
			<useMeatFrom>BMT_WhiteShark</useMeatFrom>
			<lifeStageAges>
				<li>
					<def>AnimalBabyTiny</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.30</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.55</minAge>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
		</race>
		<modExtensions>
			<li Class="WaterWalker.WaterWalkerExtension"/>
		</modExtensions>
	</ThingDef>

