	<!-- Hammerhead Shark -->

	<!-- Copied from LifeStages.xml, added modExtensions -->
	<LifeStageDef ParentName="AnimalBaby">
		<defName>BMT_HammerheadBabyTiny</defName>
		<bodySizeFactor>0.1</bodySizeFactor>
		<foodMaxFactor>4</foodMaxFactor>
