		<milkable>true</milkable>
		<shearable>true</shearable>
	</LifeStageDef>

	<ThingDef ParentName="BiomesCore_SaltWaterAnimal" ADogSaidBody="Tail">
		<defName>BMT_Hammerhead</defName>
		<label>hammerhead shark</label>
		<description>A large species of sphyrnidae shark. Recognized by the unique and striking head they have, they live mainly near coastal regions feeding on medium size prey.</description>
		<statBases>
			<MoveSpeed>7</MoveSpeed>
			<ComfyTemperatureMin>-30</ComfyTemperatureMin>
			<ComfyTemperatureMax>50</ComfyTemperatureMax>
			<MarketValue>750</MarketValue>
			<Wildness>0.95</Wildness>
		</statBases>
		<tools>
			<li>
				<label>teeth</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>14</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.7</chanceFactor>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>18</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>18</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<race>
			<herdAnimal>false</herdAnimal>
			<predator>true</predator>
			<body>Biomes_SharkBody</body>
			<leatherDef>BMT_Sharkskin</leatherDef>
			<baseHungerRate>0.7</baseHungerRate>
			<baseBodySize>1.5</baseBodySize>
			<baseHealthScale>2.0</baseHealthScale>
			<foodType>CarnivoreAnimal</foodType>
			<gestationPeriodDays>30</gestationPeriodDays>
			<packAnimal>false</packAnimal>
			<nuzzleMtbHours>275</nuzzleMtbHours>
			<petness>0.01</petness>
			<lifeExpectancy>35</lifeExpectancy>
			<trainability>Intermediate</trainability>
			<manhunterOnTameFailChance>0.6</manhunterOnTameFailChance>
			<manhunterOnDamageChance>1</manhunterOnDamageChance>
			<useMeatFrom>BMT_WhiteShark</useMeatFrom>
			<lifeStageAges>
				<li>
					<def>BMT_HammerheadBabyTiny</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>BMT_HammerheadJuvenile</def>
					<minAge>0.4</minAge>
				</li>
				<li>
					<def>BMT_HammerheadAdult</def>
					<minAge>0.8</minAge>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
		</race>
	</ThingDef>

