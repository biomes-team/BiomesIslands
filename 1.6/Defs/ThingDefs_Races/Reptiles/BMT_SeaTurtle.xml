<Defs>


	<ThingDef ParentName="AnimalThingBase">
		<defName>BMT_SeaTurtle</defName>
		<label>sea turtle</label>
		<description>This heavily armored sea-dwelling reptile is known for its slow moving speed and surprisingly vicious bite. Because of its natural armor, it is tough to kill and can do serious damage during drawn-out melee fights.</description>
		<statBases>
			<MoveSpeed>4</MoveSpeed>
			<MarketValue>750</MarketValue>
			<ArmorRating_Blunt>0.35</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.50</ArmorRating_Sharp>
			<ComfyTemperatureMin>0</ComfyTemperatureMin>
			<ComfyTemperatureMax>50</ComfyTemperatureMax>
			<Wildness>0.75</Wildness>
		</statBases>
		<tools>
			<li>
				<label>beak</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>19</power>
				<cooldownTime>2.4</cooldownTime>
				<linkedBodyPartsGroup>TurtleBeakAttackTool</linkedBodyPartsGroup>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>4</power>
				<cooldownTime>2.6</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.01</chanceFactor>
			</li>
		</tools>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_EggSeaTurtleFertilized</eggFertilizedDef>
				<eggUnfertilizedDef>BMT_EggSeaTurtleUnfertilized</eggUnfertilizedDef>
				<eggFertilizationCountMax>1</eggFertilizationCountMax>
				<eggLayIntervalDays>30</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>
					<min>2</min>
					<max>6</max>
				</eggCountRange>
			</li>
		</comps>
		<race>
			<body>TurtleLike</body>
			<baseBodySize>3</baseBodySize>
			<baseHungerRate>1</baseHungerRate>
			<baseHealthScale>3.5</baseHealthScale>
			<foodType>OmnivoreRoughAnimal</foodType>
			<leatherDef>BiomesCore_GreenChitin</leatherDef>
			<manhunterOnTameFailChance>0.25</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.35</manhunterOnDamageChance>
			<lifeExpectancy>140</lifeExpectancy>
			<herdMigrationAllowed>false</herdMigrationAllowed>
			<meatLabel>sea turtle meat</meatLabel>
			<waterSeeker>true</waterSeeker>
			<waterCellCost>1</waterCellCost>
			<lifeStageAges>
				<li>
					<def>AnimalBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.25</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.7</minAge>
					<soundWounded>Pawn_Tortoise_Wounded</soundWounded>
					<soundDeath>Pawn_Tortoise_Death</soundDeath>
					<soundCall>Pawn_Tortoise_Call</soundCall>
					<soundAngry>Pawn_Tortoise_Angry</soundAngry>
				</li>
