<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="AnimalThingBase">
		<defName>BMT_GalapagosTortoise</defName>
		<label>galapagos tortoise</label>
		<description>This heavily armored island-dwelling reptile is known for its slow moving speed and surprisingly vicious bite. Because of its natural armor, it is tough to kill and can do serious damage during drawn-out melee fights.</description>
		<statBases>
			<MoveSpeed>1.5</MoveSpeed>
			<MarketValue>350</MarketValue>
			<ArmorRating_Blunt>0.15</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.20</ArmorRating_Sharp>
			<ComfyTemperatureMin>0</ComfyTemperatureMin>
			<ComfyTemperatureMax>50</ComfyTemperatureMax>
			<Wildness>0.75</Wildness>
		</statBases>
		<uiIconScale>1.25</uiIconScale>
		<tools>
			<li>
				<label>beak</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>11</power>
				<cooldownTime>2.6</cooldownTime>
				<linkedBodyPartsGroup>TurtleBeakAttackTool</linkedBodyPartsGroup>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>5</power>
				<cooldownTime>2.6</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_EggGalapagosTortoiseFertilized</eggFertilizedDef>
				<eggUnfertilizedDef>BMT_EggGalapagosTortoiseUnfertilized</eggUnfertilizedDef>
				<eggFertilizationCountMax>1</eggFertilizationCountMax>
				<eggLayIntervalDays>30</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>1~2</eggCountRange>
			</li>
		</comps>
		<race>
			<body>TurtleLike</body>
			<baseBodySize>1.2</baseBodySize>
			<baseHungerRate>0.33</baseHungerRate>
			<!-- <baseHealthScale>0.6</baseHealthScale> -->
			<foodType>OmnivoreRoughAnimal</foodType>
			<leatherDef>Leather_Lizard</leatherDef>
			<useMeatFrom>Tortoise</useMeatFrom>
			<lifeExpectancy>120</lifeExpectancy>
			<lifeStageAges>
				<li>
					<def>AnimalBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.35</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>1.0</minAge>
					<soundWounded>BMT_TortoiseBig_Wounded</soundWounded>
					<soundDeath>BMT_TortoiseBig_Death</soundDeath>
					<soundCall>BMT_TortoiseBig_Call</soundCall>
					<soundAngry>BMT_TortoiseBig_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
		</race>
		<tradeTags>
			<li>AnimalUncommon</li>
		</tradeTags>
	</ThingDef>

