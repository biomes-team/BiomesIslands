<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ModCheck.isModLoaded">
				<modName>Vanilla Fishing Expanded</modName>
				<yourMod>Biomes! Islands</yourMod>
			</li>
			

			<li Class="PatchOperationAdd"> 
				<xpath>/Defs/VCE_Fishing.BiomeTempDef[defName="VCEF_BiomeHot"]/biomes</xpath>
				<value>
					<li>BiomesIslands_Atoll_NoBeach</li>		
				</value>
			</li>
			
			<li Class="PatchOperationAdd"> 
				<xpath>/Defs/VCE_Fishing.FishableTerrainDef[defName="VCEF_VanillaFishableTerrainsOcean"]/allowedTerrains</xpath>
				<value>
					<li>BiomesIslands_WaterShallowLagoon</li>		
				</value>
			</li>

		</operations>
	</Operation>


</Patch>

