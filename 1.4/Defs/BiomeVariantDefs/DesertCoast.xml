<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <BiomeVariantDef>

        <defName>BiomesIslands_DesertCoast</defName>
        
        <label>desert coast</label>

        <biomeLabel operation="appendPar">desert coast</biomeLabel>
        <biomeDescription operation="appendLine">A desert coast borders this tile.</biomeDescription>
        
        <worldTileConditions>
            <coast>Ocean</coast>
            <anyOf>
                <biome>AridShrubland</biome>
                <biome>Desert</biome>
                <biome>ExtremeDesert</biome>
            </anyOf>
        </worldTileConditions>

        <layers>
            <li>

                <!-- use the operation "add" to append entries to the wildPlants of the main biome -->
                <wildPlants operation="add">

                    <!-- land plants -->
                    <BiomesIslands_CoconutPalm>0.03</BiomesIslands_CoconutPalm>
                    
                    <!-- water plants -->
                    <BiomesIslands_Kelp>1.5</BiomesIslands_Kelp>
                    <BiomesIslands_SeaGrass>4.0</BiomesIslands_SeaGrass>
                    <BiomesIslands_Seaweed>4.0</BiomesIslands_Seaweed>
                    <BiomesIslands_GreenAlgae>0.3</BiomesIslands_GreenAlgae>
                    <BiomesIslands_Murkweed>0.1</BiomesIslands_Murkweed>
                    <BiomesIslands_WhiteAlgae>0.8</BiomesIslands_WhiteAlgae>
                    <BiomesIslands_Sargassum>1.5</BiomesIslands_Sargassum>
                    
                </wildPlants>

                <!-- use the operation "add" to append entries to the wildAnimals of the main biome -->
                <wildAnimals operation="add">

                    <!-- land grazers -->
                    <BiomesIslands_ClutterCrab>0.4</BiomesIslands_ClutterCrab>
                    <BiomesIslands_Seagull>1.3</BiomesIslands_Seagull>
                    <BiomesIslands_FiddlerCrab>0.8</BiomesIslands_FiddlerCrab>
                    <BiomesIslands_HermitCrab>0.2</BiomesIslands_HermitCrab>
                    <BiomesIslands_SeaTurtle>0.5</BiomesIslands_SeaTurtle>
                    <BiomesIslands_MarineIguana>0.7</BiomesIslands_MarineIguana>
                    <BiomesIslands_LeatherbackTurtle>0.3</BiomesIslands_LeatherbackTurtle>
                    <BiomesIslands_PhoebaniaRat>0.1</BiomesIslands_PhoebaniaRat>
                    <BiomesIslands_GalapagosTortoise>0.5</BiomesIslands_GalapagosTortoise>
                    <BMT_SeaOtter>0.01</BMT_SeaOtter>

                    <!-- land predators -->
                    <BMT_KomodoDragon>0.05</BMT_KomodoDragon>
                    
                    <!-- aquatic grazers -->
                    <BiomesIslands_Sardine>1.5</BiomesIslands_Sardine>
                    <BMT_SunfinAngelfish>1.0</BMT_SunfinAngelfish>
                    <BMT_OrchidBasslet>1.0</BMT_OrchidBasslet>
                    <BiomesIslands_LimepeelAngelfish>1.5</BiomesIslands_LimepeelAngelfish>
                    <BMT_GreenEel>1.0</BMT_GreenEel>
                    <BiomesIslands_Trout>0.15</BiomesIslands_Trout>
                    <BiomesIslands_BoomWhale>1.0</BiomesIslands_BoomWhale>
                    <BMT_Parrotfish>1.5</BMT_Parrotfish>
                    <BiomesIslands_MantaRay>0.05</BiomesIslands_MantaRay>

                    <!-- aquatic predators -->
                    <BiomesIslands_RedSnapper>0.3</BiomesIslands_RedSnapper>
                    <BiomesIslands_Tuna>0.45</BiomesIslands_Tuna>
                    <BiomesIslands_Hammerhead>0.2</BiomesIslands_Hammerhead>
                    <BiomesIslands_WhiteShark>0.158</BiomesIslands_WhiteShark>
                    
                </wildAnimals>

            </li>
        </layers>

    </BiomeVariantDef>
</Defs>
