<Defs>

  <ThingDef ParentName="BiomesCore_CrabThingBase">
    <defName>BiomesIslands_RimCrab</defName>
    <label>rimcrab</label>
    <description>A mongrel crab species that can survive on most rimworlds in warm waters. The animal’s hard shell makes it hard to get at it’s delicious meat, but the effort may well be worth it.</description>
    <statBases>
      <MoveSpeed>3.5</MoveSpeed>
      <MarketValue>110</MarketValue>
      <ComfyTemperatureMin>-8</ComfyTemperatureMin>
	  <ComfyTemperatureMax>55</ComfyTemperatureMax>
    </statBases>
    <race>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>0.25</baseBodySize>
	  <baseHealthScale>0.8</baseHealthScale>
	  <baseHungerRate>0.30</baseHungerRate>
      <lifeExpectancy>9</lifeExpectancy>
      <manhunterOnTameFailChance>0.15</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.05</manhunterOnDamageChance>
	  <wildness>0.10</wildness>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>BiomesIslands_EggRimCrabFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>2</eggFertilizationCountMax>
        <eggLayIntervalDays>15</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>
          <min>1</min>
          <max>3</max>
        </eggCountRange>
      </li>
    </comps>
    <tools>
		<li>
			<label>claw</label>
			<capacities>
				<li>Cut</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2.2</cooldownTime>
			<linkedBodyPartsGroup>HeadClaw</linkedBodyPartsGroup>
		</li>
		<li>
			<label>head</label>
			<capacities>
				<li>Blunt</li>
			</capacities>
			<power>4</power>
			<cooldownTime>1.65</cooldownTime>
			<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
		</li>
	</tools>
  </ThingDef>

